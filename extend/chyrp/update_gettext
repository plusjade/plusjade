#!/bin/sh
ruby gettext.rb                                       > ./includes/locale/en_US.pot

ruby gettext.rb ./feathers/audio/   --domain=audio    > ./feathers/audio/locale/en_US.pot
ruby gettext.rb ./feathers/chat/    --domain=chat     > ./feathers/chat/locale/en_US.pot
ruby gettext.rb ./feathers/link/    --domain=link     > ./feathers/link/locale/en_US.pot
ruby gettext.rb ./feathers/photo/   --domain=photo    > ./feathers/photo/locale/en_US.pot
ruby gettext.rb ./feathers/quote/   --domain=quote    > ./feathers/quote/locale/en_US.pot
ruby gettext.rb ./feathers/text/    --domain=text     > ./feathers/text/locale/en_US.pot
ruby gettext.rb ./feathers/video/   --domain=video    > ./feathers/video/locale/en_US.pot

ruby gettext.rb ./modules/cacher/       --domain=cacher       > ./modules/cacher/locale/en_US.pot
ruby gettext.rb ./modules/comments/     --domain=comments     > ./modules/comments/locale/en_US.pot
ruby gettext.rb ./modules/markdown/     --domain=markdown     > ./modules/markdown/locale/en_US.pot
ruby gettext.rb ./modules/paging/       --domain=paging       > ./modules/paging/locale/en_US.pot
ruby gettext.rb ./modules/read_more/    --domain=read_more    > ./modules/read_more/locale/en_US.pot
ruby gettext.rb ./modules/aggregator/   --domain=aggregator   > ./modules/aggregator/locale/en_US.pot
ruby gettext.rb ./modules/smartypants/  --domain=smartypants  > ./modules/smartypants/locale/en_US.pot
ruby gettext.rb ./modules/tags/         --domain=tags         > ./modules/tags/locale/en_US.pot
ruby gettext.rb ./modules/textilize/    --domain=textilize    > ./modules/textilize/locale/en_US.pot
ruby gettext.rb ./modules/swfupload/    --domain=swfupload    > ./modules/swfupload/locale/en_US.pot

ruby gettext.rb ./themes/stardust/ --domain=theme > ./themes/stardust/locale/en_US.pot

